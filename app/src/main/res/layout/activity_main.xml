<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.android.game.pokergame.MainActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="394dp"
        android:layout_height="300dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="142dp"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/player1FirstCard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/back" />

            <ImageView
                android:id="@+id/player1SecondCard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/back" />

            <ImageView
                android:id="@+id/player1ThirdCard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/back" />

            <ImageView
                android:id="@+id/player1FourthCard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/back" />

            <ImageView
                android:id="@+id/player1FifthCard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/back" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="142dp"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/player2FirstCard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/back" />

            <ImageView
                android:id="@+id/player2SecondCard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/back" />

            <ImageView
                android:id="@+id/player2ThirdCard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/back" />

            <ImageView
                android:id="@+id/player2FourthCard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/back" />

            <ImageView
                android:id="@+id/player2FifthCard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/back" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="368dp"
        android:layout_height="47dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout">

        <Button
            android:id="@+id/deal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:background="@color/colorAccent"
            android:text="Deal" />

        <Button
            android:id="@+id/compare"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"

            android:layout_weight="1"
            android:background="@color/colorAccent"
            android:text="Compare" />
    </LinearLayout>


    <ScrollView
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:minHeight="107dp"
        android:layout_marginTop="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/player1TitleTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Player 1" />

                <TextView
                    android:id="@+id/play1Card1TextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Card 1" />

                <TextView
                    android:id="@+id/play1Card2TextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Card 2" />

                <TextView
                    android:id="@+id/play1Card3TextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Card 3" />

                <TextView
                    android:id="@+id/play1Card4TextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Card 4" />

                <TextView
                    android:id="@+id/play1Card5TextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Card 5" />

                <TextView
                    android:id="@+id/emptyLineTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=" " />

                <TextView
                    android:id="@+id/handValueTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Hand Values : " />

                <TextView
                    android:id="@+id/player1ResultTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=" " />

                <TextView
                    android:id="@+id/emptyLine2TextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="  " />

                <TextView
                    android:id="@+id/resultView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Result" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/player2TitleTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Player 2" />

                <TextView
                    android:id="@+id/play2Card1TextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Card 1" />

                <TextView
                    android:id="@+id/play2Card2TextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Card 2" />

                <TextView
                    android:id="@+id/play2Card3TextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Card 3" />

                <TextView
                    android:id="@+id/play2Card4TextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Card 4" />

                <TextView
                    android:id="@+id/play2Card5TextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:text="Card 5" />

                <TextView
                    android:id="@+id/emptyLine3TextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="" />

                <TextView
                    android:id="@+id/handValue2TextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="" />

                <TextView
                    android:id="@+id/player2ResultTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=" " />

                <TextView
                    android:id="@+id/emptyLine4TextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="" />

                <TextView
                    android:id="@+id/resultValueTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>



</android.support.constraint.ConstraintLayout>
